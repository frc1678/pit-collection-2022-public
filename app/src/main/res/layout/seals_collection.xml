<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_team_number"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/team_number"
        android:textStyle="bold"
        android:textSize="75dp"
        android:gravity="center"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time To Install Climber"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"/>

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_margin="@dimen/very_small">
                <RadioButton android:id="@+id/radio_zero"
                    style="@style/radio_btns"
                    android:text="Low"
                    android:gravity="center"
                    android:onClick="onRadioButtonClicked"/>
                <RadioButton android:id="@+id/radio_one"
                    style="@style/radio_btns"
                    android:text="Average"
                    android:gravity="center"
                    android:onClick="onRadioButtonClicked"/>
                <RadioButton android:id="@+id/radio_two"
                    style="@style/radio_btns"
                    android:text="High"
                    android:gravity="center"
                    android:onClick="onRadioButtonClicked"/>
                <RadioButton android:id="@+id/radio_three"
                    style="@style/radio_btns"
                    android:text="Impossible"
                    android:gravity="center"
                    android:onClick="onRadioButtonClicked"/>
            </RadioGroup>
        </LinearLayout>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/btn_save_button"
            android:text="Save"
            android:textSize="40dp"
            android:layout_margin="@dimen/very_small"/>
    </LinearLayout>

    <EditText android:id="@+id/seals_notes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="25dp"
        android:gravity="start"
        android:inputType="textMultiLine"
        android:background="@drawable/edittext_border"
        android:layout_margin="@dimen/very_small"/>


</LinearLayout>